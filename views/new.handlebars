{{!-- ./views/new.handlebars --}}
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="mb-5 mt-2 row">
        <span class="col-3">*必填欄位</span>
        <h4 class="col-9 text-center">請輸入你的支出</h4>
      </div>
      <form action="/records" method="POST">
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="name" class="col-3">名稱*：</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control col-9"
            placeholder="請輸入名稱"
            required
          />
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="merchant" class="col-3">商家：</label>
          <input
            type="text"
            id="merchant" 
            name="merchant" 
            class="form-control col-9" 
            placeholder="請輸入商家名稱"
          />
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="date" class="col-3">日期*：</label>
          <div class="input-group date col-9 p-0">
            <input
              name="date"
              type="text"
              class="form-control"
              value="2020/03/15"
              id="datepicker"
              required
            />
            <div class="input-group-append">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="category" class="col-3">類別*：</label>
          <div class="col-9 p-0">
            <select name="category" class="custom-select" required>
              <option value="">選擇</option>
              <option value="家居物業">家居物業</option>
              <option value="交通出行">交通出行</option>
              <option value="休閒娛樂">休閒娛樂</option>
              <option value="餐飲食品">餐飲食品</option>
              <option value="其他">其他</option>
            </select>
          </div>
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="amount" class="col-3">金額*：</label>
          <input
            type="text"
            id="amount"
            name="amount"
            class="form-control col-9"
            placeholder="請輸入金額"
            required
          />
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-outline-dark btn-text">新增支出</button>
        </div>
      </form>
    </div>
  </div>
</div>
