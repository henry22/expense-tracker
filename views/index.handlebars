{{!-- ./views/index.handlebars --}}
<p>類別</p>
<p>總金額</p>

<ul>
  {{#each records}}
    <li>
      <p>{{{this.name}}}</p>
      <p>{{{this.category}}}</p>
      <p>{{{this.date}}}</p>
      <p>{{{this.amount}}}</p>
      <a href="/records/{{{this._id}}}/edit">修改</a>
      <form action="/records/{{{this._id}}}?_method=DELETE" method="POST" class="d-inline">
        <button type="submit">刪除</button>
      </form>
    </li>
  {{/each}}
  <a class="btn text-white border border-dark bg-warning" href="/records/new">新增支出</a>
</ul>