{{!-- ./views/new.handlebars --}}
<div class="container">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="mb-5 mt-2 row">
        <span class="col-3">*必填欄位</span>
        <h4 class="col-9 text-center">請修改你的支出</h4>
      </div>
      <form action="/records/{{{record._id}}}?_method=PUT" method="POST">
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="name" class="col-3">名稱*：</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control col-9"
            value="{{{record.name}}}"
            required
          />
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="merchant" class="col-3">商家：</label>
          <input 
            type="text" 
            id="merchant" 
            name="merchant" 
            class="form-control col-9" 
            placeholder="請輸入商家名稱" 
            value="{{{record.merchant}}}"/>
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="date" class="col-3">日期*：</label>
          <div class="input-group date col-9 p-0">
            <input
              name="date"
              type="text"
              class="form-control"
              value="{{{recordDate}}}"
              id="datepicker"
              required
            />
            <div class="input-group-append">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="category" class="col-3">類別*：</label>
          <div class="col-9 p-0">
            <select name="category" class="custom-select" required>
              <option value="">選擇</option>
              <option value="家居物業" {{#isEqual record.category "家居物業"}}selected{{/isEqual}}>家居物業</option>
              <option value="交通出行" {{#isEqual record.category "交通出行"}}selected{{/isEqual}}>交通出行</option>
              <option value="休閒娛樂" {{#isEqual record.category "休閒娛樂"}}selected{{/isEqual}}>休閒娛樂</option>
              <option value="餐飲食品" {{#isEqual record.category "餐飲食品"}}selected{{/isEqual}}>餐飲食品</option>
              <option value="其他" {{#isEqual record.category "其他"}}selected{{/isEqual}}>其他</option>
            </select>
          </div>
        </div>
        <div class="form-group row mb-5 d-flex align-items-center">
          <label for="amount" class="col-3">金額*：</label>
          <input
            type="text"
            id="amount"
            name="amount"
            class="form-control col-9"
            value="{{{record.amount}}}"
            required
          />
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-outline-dark btn-text">送出</button>
        </div>
      </form>
    </div>
  </div>
</div>
